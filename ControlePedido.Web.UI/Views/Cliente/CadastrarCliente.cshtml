@model ControlePedidos.Aplicacao.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "CadastrarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CadastrarCliente", "Cliente", null, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Cadastrar Cliente</h3>
                    </div>
                    <div class="form-horizontal col-md-11">
                        <div class="box-body">
                            <div class="form-group">
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Nome", @id = "txtNome", @autofocus = "autofocus", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.Celular, new { htmlAttributes = new { @class = "form-control input-lg", @id = "txtCelular", @placeholder = "Celular somente números", @autocomplete = "off" } })
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control input-lg", @id = "txtTelefone", @placeholder = " Tel Fixo somente números", @autocomplete = "off" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Cep, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "CEP somente números", @id = "txtCEP", @autocomplete = "off" } })
                                </div>
                                <div class="col-md-3">
                                    <a href="#" id="btnBuscarCep" class="btn btn-lg btn-success"><i class="glyphicon glyphicon-search"></i>&nbsp;Buscar</a>
                                </div>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.UF, new { htmlAttributes = new { @class = "form-control input-lg", @id = "txtUF", @placeholder = "UF", @autocomplete = "off" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.CidadeNome, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Cidade", @id = "txtCidade", @autocomplete = "off" } })
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Bairro", @id = "txtBairro", @autocomplete = "off" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.Rua, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "(Rua, Trav, Av..)", @id = "txtLogradouro", @autocomplete = "off" } })
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Número, lote, quadra", @id = "txtNumero", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Referencia, new { htmlAttributes = new { @class = "form-control input-lg", @id = "txtReferencia", @placeholder = "Digite a referência do endereço", @autocomplete = "off" } })
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" id="btnSalvarCliente" value="Salvar" class="btn btn-primary btn-lg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@Html.Partial("_msgModal")

<script src="~/Scripts/endereco/endereco.js"></script>
<script src="~/Scripts/Cliente/CadastroCliente.js"></script>

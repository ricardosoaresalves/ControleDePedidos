@model IEnumerable<ControlePedidos.Aplicacao.ViewModels.ProdutoViewModel>


<h2>Listagem de Produtos</h2>

<div class="row">
    <div class="box ">
        <div class="box-body table-responsive no-padding">
            <div class="col-md-offset-1 col-md-10">
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-info  alert-dismissable">
                        <i class="fa fa-info"></i>
                        <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
                        Nenhum produto encontrado
                    </div>
                }
                else
                {
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>
                                    Produto
                                </th>
                                <th>
                                    Preco
                                </th>
                            </tr>
                        </tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeProduto)
                                    @Html.HiddenFor(modelItem => item.ProdutoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Preco)
                                </td>
                                <td>
                                    <a href="@Url.Action("EditarProduto","Produto", new { id = item.ProdutoId,  })" title="Editar"><i class="glyphicon glyphicon-edit"></i>Editar</a>
                                    <a href="#" data-id="@item.ProdutoId" data-nome="@item.NomeProduto" id="lnkExcluir" class="clicar excluir" title="Excluir"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                                </td>
                            </tr>
                        }

                    </table>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Produto/excluirProduto.js"></script>

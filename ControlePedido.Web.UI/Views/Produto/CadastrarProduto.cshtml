@model ControlePedidos.Aplicacao.ViewModels.ProdutoViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="box">
                    <div class=" box-header with-border">
                        <h3 class="box-title">Cadastrar Produto</h3>
                    </div>
                    <div class="form-horizontal col-md-11">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="Nome" class="control-label col-md-2">Nome produto</label>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.NomeProduto, new { htmlAttributes = new { @class = "form-control input-lg has-error", @placeholder = "Nome do produto", @id = "txtNome", @autofocus = "autofocus", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.NomeProduto, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Nome" class="control-label col-md-2">Descricao</label>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control input-lg", @id = "txtDescricao", @autocomplete = "off" } })
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-9">
                                <table id="tblCalcPrecoProduto" class="table table-bordered ">
                                    <thead>
                                        <tr>
                                            <th>Valor de custo</th>
                                            <th>Lucro percentual (%)</th>
                                            <th>Preço do produto(R$)</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Html.EditorFor(model => model.ValorCusto, new { htmlAttributes = new { @class = "form-control input-lg", @id = "txtValorCusto", @onKeyup = "formatarMoeda(this);", @autocomplete = "off" } })</td>
                                                @Html.HiddenFor(model => model.ValorCusto, new { @id = "hdnValorCusto" })
                                            <td>@Html.EditorFor(model => model.LucroSugerido, new { htmlAttributes = new { @class = "form-control input-lg", @id = "txtLucro", @autocomplete = "off" } })</td>
                                            <td>
                                                @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control input-lg", @id = "txtPreco", @disabled = "disabled" } })
                                                @Html.HiddenFor(model => model.Preco, new { @id = "hdnPreco" })
                                            </td>
                                            <td><a href="#" class="btn btn-lg btn-success" id="lnkCalcValorProduto"><i class="fa fa-fw fa-calculator"></i>Calcular preço</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Salvar" id="btnSalvarPrd" class="btn btn-primary btn-lg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@Html.Partial("_msgModal")

<script src="~/Scripts/Funcoes/NumberFormat154.js"></script>
<script src="~/Scripts/Funcoes/funcoes.js"></script>
<script src="~/Scripts/Produto/produto.js"></script>

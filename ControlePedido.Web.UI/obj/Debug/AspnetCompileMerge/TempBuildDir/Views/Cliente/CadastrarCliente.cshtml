@model ControlePedidos.Aplicacao.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "CadastrarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("CadastrarCliente", "Cliente", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="box">                    
                    <div class="box-header with-border">
                        <h3 class="box-title">Cadastrar Cliente</h3>
                    </div>
                    <div class="form-horizontal col-md-11">
                        <div class="box-body">
                            <div class="form-group">                        
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control input-lg", @placeholder = "Nome", @id = "txtNome", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">                                
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.RG, new { @class = "form-control input-lg", @id = "txtRG", @placeholder = "RG" })
                                    @Html.ValidationMessageFor(model => model.RG, "", new { @class = "text-danger" })
                                </div>
                            </div>                            
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Cpf, new { @class = "form-control input-lg", @id = "txtCPF", @placeholder = "CPF" })
                            </div>
                            

                            <div class="form-group">
                                <label for="E-mail" class="control-label col-md-2">E-mail</label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-lg", @id = "txtEmail", @placeholder = "E-mail" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="E-mail" class="control-label col-md-2">Celular</label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Celular, new { @class = "form-control input-lg", @id = "txtCelular", @placeholder = "somente números" })
                                    @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="E-mail" class="control-label col-md-2">Telefone</label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control input-lg", @id = "txtTelefone", @placeholder = "somente números" })
                                    @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="CEP" class="control-label col-md-2">CEP</label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Cep, new { @class = "form-control input-lg", @placeholder = "somente números", @id = "txtCEP" })
                                    @Html.ValidationMessageFor(model => model.Cep, "", new { @class = "text-danger" })
                                </div>
                                <a href="#" id="btnBuscarCep" class="btn btn-lg btn-success"><i class="glyphicon glyphicon-search"></i>&nbsp;Buscar</a>
                            </div>

                            <div class="form-group">
                                <label for="Cidade" class="control-label col-md-2">Cidade</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.CidadeNome, new { @class = "form-control input-lg", @placeholder = "Cidade", @id = "txtCidade" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Bairro" class="control-label col-md-2">Bairro</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.Bairro, new { @class = "form-control input-lg", @placeholder = "Bairro", @id = "txtBairro" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Logradouro" class="control-label col-md-2">Rua</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.Rua, new { @class = "form-control input-lg", @placeholder = "(Rua, Trav, Av..)", @id = "txtLogradouro" })
                                    @Html.ValidationMessageFor(model => model.Rua, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Numero" class="control-label col-md-2">Número</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.Numero, new { @class = "form-control input-lg", @placeholder = "Número, lote, quadra", @id = "txtNumero" })
                                    @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Complemento" class="control-label col-md-2">Complemento</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.Complemento, new { @class = "form-control input-lg", @placeholder = "Casa, apartamento...", @id = "txtComplemento" })
                                    @Html.ValidationMessageFor(model => model.Complemento, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-2">
                                    @Html.TextBoxFor(model => model.UF, new { @class = "form-control input-lg", @id = "txtUF", @placeholder = "UF" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-primary btn-lg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/endereco/endereco.js"></script>
<script src="~/Scripts/cliente/cliente.js"></script>
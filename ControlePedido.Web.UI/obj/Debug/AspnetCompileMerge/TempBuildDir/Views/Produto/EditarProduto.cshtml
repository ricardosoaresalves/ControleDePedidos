@model ControlePedidos.Aplicacao.ViewModels.ProdutoViewModel

@{
    ViewBag.Title = "EditarProduto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="box">
                    <div class=" box-header with-border">
                        <h3 class="box-title">Editar Produto</h3>
                    </div>
                    <div class="form-horizontal col-md-11">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="Nome" class="control-label col-md-2">Nome produto</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.NomeProduto, new { @class = "form-control input-lg", @placeholder = "Nome do produto", @id = "txtNome", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(model => model.NomeProduto, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.ProdutoId)
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Nome" class="control-label col-md-2">Preco</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Preco, new { @class = "form-control input-lg", @placeholder = "Preço", @id = "txtPreco" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Nome" class="control-label col-md-2">Descricao</label>
                                <div class="col-md-9">
                                    @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control input-lg", @id = "txtDescricao" })
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-primary btn-lg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

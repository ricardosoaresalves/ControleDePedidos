@model IEnumerable<ControlePedidos.Aplicacao.ViewModels.ProdutoViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem de Produtos</h2>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>
                                Produto
                            </th>
                            <th>
                                Preco
                            </th>
                        </tr>
                    </tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeProduto)
                                    @Html.HiddenFor(modelItem => item.ProdutoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Preco)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar |", "EditarProduto", new { id = item.ProdutoId })                                    
                                    <a href="#" data-id="@item.ProdutoId" data-nome="@item.NomeProduto" id="lnkExcluir" class="excluir">Excluir</a>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>

